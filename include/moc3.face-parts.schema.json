{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Face parts mapping for Live2D Moc3 drawables",
  "type": "object",
  "properties": {
    "model": {
      "type": "string",
      "description": "Source .moc3.json filename or path (optional)"
    },
    "face_parts": {
      "type": "object",
      "description": "Mapping of face-part tags to drawable IDs",
      "properties": {
        "eye_left": { "type": "array", "items": { "type": "string" } },
        "eye_right": { "type": "array", "items": { "type": "string" } },
        "eye_white_left": { "type": "array", "items": { "type": "string" } },
        "eye_white_right": { "type": "array", "items": { "type": "string" } },
        "eye_ball_left": { "type": "array", "items": { "type": "string" } },
        "eye_ball_right": { "type": "array", "items": { "type": "string" } },
        "eyelid_left": { "type": "array", "items": { "type": "string" } },
        "eyelid_right": { "type": "array", "items": { "type": "string" } },
        "eye": { "type": "array", "items": { "type": "string" } },
        "brow_left": { "type": "array", "items": { "type": "string" } },
        "brow_right": { "type": "array", "items": { "type": "string" } },
        "mouth": { "type": "array", "items": { "type": "string" } },
        "lip_upper": { "type": "array", "items": { "type": "string" } },
        "lip_lower": { "type": "array", "items": { "type": "string" } },
        "tongue": { "type": "array", "items": { "type": "string" } },
        "teeth": { "type": "array", "items": { "type": "string" } },
        "nose": { "type": "array", "items": { "type": "string" } },
        "cheek_left": { "type": "array", "items": { "type": "string" } },
        "cheek_right": { "type": "array", "items": { "type": "string" } },
        "face": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    }
  },
  "required": [
    "face_parts"
  ]
}

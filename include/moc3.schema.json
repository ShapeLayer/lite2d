{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "A schema for Live2D Moc3 drawables",
  "type": "object",
  "properties": {
    "canvas": {
      "type": "object",
      "properties": {
        "height": {
          "type": "number"
        },
        "width": {
          "type": "number"
        }
      },
      "required": [
        "height",
        "width"
      ]
    },
    "drawables": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "blend_mode": {
            "type": "number"
          },
          "id": {
            "type": "string"
          },
          "index_count": {
            "type": "number"
          },
          "indices": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "opacity": {
            "type": "number"
          },
          "parent_part_index": {
            "type": "number"
          },
          "positions": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          },
          "texture_index": {
            "type": "number"
          },
          "uvs": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          },
          "vertex_count": {
            "type": "number"
          }
        },
        "required": [
          "blend_mode",
          "id",
          "index_count",
          "indices",
          "opacity",
          "parent_part_index",
          "positions",
          "texture_index",
          "uvs",
          "vertex_count"
        ]
      }
    }
  },
  "required": [
    "canvas",
    "drawables"
  ]
}
